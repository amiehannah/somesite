  @media (width <= 992px) {
    .container {
      display: flex;
      flex-direction: column;
      text-align: center;
      place-items: center;
      max-height: 1000px;
      /* max-height: 1050px; */
    }

    .background-image {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 500px;
      width: 100%;
    }

    .hero-title {
      position: relative;
      top: -50px; /* Adjust to overlap */
      padding: 0 10px;
    }

    .pop-colour {
      margin: 10px 0;
      margin-top: -40px; /* Adjust spacing */
    }
  }

  @media (width <= 650px) {
    .hero-title {
      font-size: 3rem;
      overflow: visible;
      top: -40px;
    }

    .pop-colour {
      font-size: 2rem;
    }
  }
</style>
