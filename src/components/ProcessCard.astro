<div class="process-section">
  {
    data.map((d) => (
      <div class="process-card">
        <div class="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width={48}
            height={48}
            viewBox="0 0 24 24"
          >
            <path fill="#082C42" d={d.icon} />
          </svg>
        </div>
        <div class="title">{d.title}</div>
        <div class="description">{d.description}</div>
      </div>
    ))
  }
</div>

<style>
  .process-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    padding: 1rem;
    gap: 1rem;
    margin: 0 auto;
  }
  .process-card {
    display: grid;
    grid-template-rows: auto 50px 1fr; /* Three sections: icon, title, description */
    align-items: start;
    text-align: center;
    padding: 1rem;
    height: 100%;
  }

  .title {
    text-transform: uppercase;
    font-weight: 600;
    font-size: 16px;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 50px;
  }

  .icon {
    min-height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-bottom: 1rem;
  }
  .description {
    color: hsl(210, 15%, 24%);
    font-size: 14px;
    padding-top: 1rem;
    font-style: italic;
  }

  .icon path {
    fill: hsl(var(--color-cobalt));
  }

  /* media queries */
  @media screen and (max-width: 576px) {
    .process-section {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 375px) {
    .process-section {
      grid-template-columns: 1fr;
    }
  }
</style>
